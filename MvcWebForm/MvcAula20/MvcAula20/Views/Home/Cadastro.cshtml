@model MvcAula20.Models.Carro
<body style="height:100px; background: red;">
    <a href="Index">Home</a><br />
    <hr />
    <h2>Cadastro</h2>
    <hr />
    <form action="/Home/Salvar" method="post">
        <label>ID</label>
        <input type="number" id="id" name="id" value="@Model.Id" /><br />
        <label>Carro</label>
        <input type="text" id="carros" name="carros" value="@Model.Carros" /><br />
        <label>Modelo</label>
        <input type="text" id="modelo" name="modelo" value="@Model.Modelo" /><br />
        <input type="submit" value="Salvar" />
    </form>
</body>
